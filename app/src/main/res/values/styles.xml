<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
    </style>


    <style name="popup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/colorGreyDivider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="myDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

</resources>